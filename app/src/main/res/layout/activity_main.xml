<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/shield" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S.H.I.E.L.D. Avenger Locator" />

    <Button
        android:id="@+id/Spidermanbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spiderman" />

    <Button
        android:id="@+id/Hulkbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hulk" />

    <Button
        android:id="@+id/CaptainAmericabutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Captain America" />

    <Button
        android:id="@+id/Thorbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="God Of Thunder" />
</LinearLayout>